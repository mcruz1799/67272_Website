<div class="card">
  <div class="card-content">
    <h4 class="text-align center">Generate Payroll Report</h4>

        <%= simple_form_for(:date_range, url: store_report_path, method: :get, class: "form-inline") do |f| %>
          <%= f.input :start_date, as: :date %>
          <%= f.input :end_date, as: :date %>
          <%= f.input :store_id, collection: @stores %>

    <div class="row">
      <div class="form-actions col s9">
        <%= f.button :submit, "Generate"%>
      </div>
    </div>

    <% end %>

  </div>
</div>
  

