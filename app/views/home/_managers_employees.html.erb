<% if current_user.current_assignment.nil? == false %>
  <h5>Your Employees at <%= link_to current_user.current_assignment.store.name, store_path(current_user.current_assignment.store) %></h5>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
      <th>Working Today?</th>
      <th>Add Shift</th>
    </thead>

    <tbody>
      <% @employees.each do |employee|%>
        <tr>
          <td><%= link_to employee.name, employee_path(employee) %></td>
          <td><%= working_today?(employee) %></td>
          <td><%= link_to new_shift_path(assignment_id: employee.current_assignment.id) do %>
              <i class="material-icons">add</i>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>