<% if logged_in? %>  
  <% if current_user.role? :admin %>
    <%= render partial: 'partials/home_structure', locals: {primary: 'partials/store_report_form', secondary: nil, sidebar: 'quick_add'} %>
  <% elsif current_user.role? :manager %>
    <%= render partial: 'partials/home_structure', locals: {primary: 'managers_employees', secondary: nil, sidebar: 'stores_shifts'} %> 
  <% elsif current_user.role? :employee %>
    <%= render partial: 'partials/home_structure', locals: {primary: 'punch_clock', secondary: 'employees/employee_shifts', sidebar: 'latest_pay_report'} %>
  <% end %>
<% else %>
  <%= render partial: 'general_home' %>
<% end %>
