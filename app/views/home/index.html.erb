<% if logged_in? %>  
  <% if current_user.role? :admin %>
    <%= render partial: 'partials/home_structure', locals: {primary: 'recent_changes', secondary: 'quick_add', sidebar: 'partials/generate_payroll_report'} %>
  <% elsif current_user.role? :manager %>
    <%= render partial: 'manager_home' %> 
  <% elsif current_user.role? :regular %>
    <%= render partial: 'partials/home_structure', locals: {primary: 'punch_clock', secondary: 'nil', sidebar: 'nil'} %>
  <% end %>
<% else %>
  <%= render partial: 'general_home' %>
<% end %>
