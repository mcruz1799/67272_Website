

<% unless @previous_assignments.empty? %>
  <div class="card">
    <div class="card-content">
      <h5 class= "text-align center">Previous Assignments</h5>

      <table class="striped highlight">
        <thead>
          <th>Store</th>
          <th>Dates</th>
        </thead>
        <tbody>
        <% @previous_assignments.each do |assignment| %>
          <tr %>
            <td><%= link_to assignment.store.name, store_path(assignment.store) %></td>
            <td><%= assignment.start_date.strftime("%-m/%-d/%y") %> - <%= assignment.end_date.strftime("%-m/%-d/%y") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <br />
    </div>

  </div>
<% end %>
<% if (can? :create, Assignment) && (@employee.active) %>
  <div class="card grey lighten-3">
    <div class="card-content">
      <%= link_to "New Assignment", new_assignment_path(employee_id: @employee.id) %>
    </div>
  </div>
<% end %>
