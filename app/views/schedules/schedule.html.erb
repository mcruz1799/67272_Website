<div class="row">
  <div class="col s4">
    <h4 class= "text-align center">Schedule</h4>
  </div>
  <div class="col s8">
    <!-- TO DO: ADD NEW SHIFT BUTTON -->
  </div>
</div>
<div class="row">
  <div class="col s12">

    <%= month_calendar events: @shifts do |date| %>
      <em><%= date.day %></em>

      <% current_days_shifts = get_shifts_for_day(date) %>
      <% Store.alphabetical.each do |store| %>
        <% if current_days_shifts.for_store(store).size > 0 %>
          <div><strong><%= link_to store.name, store %></strong>: <%= current_days_shifts.for_store(store).size %></div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>